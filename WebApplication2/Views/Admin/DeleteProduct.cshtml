@model WebApplication2.Models.Product

<div style="text-align: center;">
    <h2>Delete Product</h2>

    <div class="card mx-auto" style="width: 30rem;">
        <form asp-controller="Admin" asp-action="SaveDelete" method="post" enctype="multipart/form-data">
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <img src="/images/@Model.ImageFileName" class="card-img-top img-fluid" alt="Product Image" />

            <div class="card-body">
                <div class="mb-3">
                    <label for="name" class="form-label"><strong>Name</strong></label>
                    <input type="text" id="name" name="Name" value="@Model.Name" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label"><strong>Category</strong></label>
                    <input type="text" id="category" name="Category" value="@Model.Category" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label"><strong>Description</strong></label>
                    <textarea id="description" name="Description" class="form-control" readonly>@Model.Description</textarea>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label"><strong>Price</strong></label>
                    <input type="number" min="0" step="0.01" id="price" name="Price" value="@Model.Price" class="form-control" readonly />
                </div>

                <button type="submit" class="btn btn-danger">Are you sure you want to delete this product?</button>
            </div>
        </form>
    </div>
</div>


