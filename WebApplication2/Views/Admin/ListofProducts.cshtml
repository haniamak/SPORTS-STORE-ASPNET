@model List<WebApplication2.Models.Product>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "List of Products";
}

<div class="row">
    <div class="col-md-10">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 3 == 0 && i != 0)
                {
                    <div class="row mt-3"></div>
                }
                <div class="col-md-4 text-center">
                    <div class="card">
                        <img src="/images/@Model[i].ImageFileName" class="card-img-top img-fluid" alt="Product Image" />
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].Name</h5>
                            <p class="card-text">Price: @Model[i].Price</p>
                            <a asp-controller="Admin" asp-action="UpdateProduct" asp-route-id="@Model[i].ProductId" class="btn btn-primary">Update</a>
                            <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@Model[i].ProductId" class="btn btn-primary">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>