@model List<WebApplication2.Models.UserModel>

	@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "List of Users";
}

<table class="table">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<td>@Model[i].UserName</td>
				<td>@Model[i].Email</td>
				<input type="hidden" value="@Model[i].Id" />
			</tr>
		}

	</tbody>
</table>
