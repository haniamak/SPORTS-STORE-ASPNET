@{
    ViewBag.Title = "Weryfikacja 2FA";
}
<h2>Weryfikacja dwuskładnikowa</h2>
<p><strong>@ViewBag.SecretKey</strong></p>
<p>Wprowadź kod wygenerowany w aplikacji autentykującej:</p>
<form method="post">
    <label for="code">Kod:</label>
    <input type="text" id="code" name="code" required>
    <button type="submit">Zweryfikuj</button>
</form>
@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
{
    <p style="color: red;">@ViewData["ErrorMessage"]</p>
}