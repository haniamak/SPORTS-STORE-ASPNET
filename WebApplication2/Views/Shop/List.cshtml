@model List<WebApplication2.Models.Product>
@{
    ViewBag.Title = "List of Products";
}

<h2>Category</h2>

<div class="row">
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-controller="Shop" asp-action="List" asp-route-category="Clothes" class="nav-link">Clothes</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Shop" asp-action="List" asp-route-category="Sports equipment" class="nav-link">Sports equipment</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Shop" asp-action="List" asp-route-category="Boots" class="nav-link">Boots</a>
            </li>
        </ul>

        <form asp-controller="Shop" asp-action="Search" method="post" class="mt-3">
            <div class="form-group">
                <label for="search">Search Products</label>
                <input type="text" name="productQuery" id="search" class="form-control" placeholder="Enter product name..." />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </form>

    </div>
    <div class="col-md-10">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 3 == 0 && i != 0)
                {
                   <div class="row mt-3"></div>
                }
                <div class="col-md-4 text-center">
                    <div class="card">
                        <img src="/images/@Model[i].ImageFileName" class="card-img-top img-fluid" alt="Product Image" />
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].Name</h5>
                            <p class="card-text">Price: @Model[i].Price</p>
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model[i].ProductId" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>